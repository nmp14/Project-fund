<h1 class="text-center">Submit a new project</h1>

<div class="container justify-content-center">
    <form class="mx-5">
        <div class="mb-3">
            <label for="projectName" class="form-label">Name of Project: </label>
            <input type="text" class="form-control" name="projectName" id="projectName">
        </div>

        <div class="mb-3">
            <label for="projectFunding" class="form-label">Funding needed: </label>
            <input type="number" class="form-control" name="projectFunding" id="projectFunding">
        </div>

        <div class="mb-3">
            <label for="projectDescription" class="form-label">Project Description: </label>
            <textarea name="projectDescription" id="projectDescription" class="form-control" rows="5"
                placeholder="Enter description..."></textarea>
        </div>

        <button id="createBtn" type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="/JS/addProject.js"></script>